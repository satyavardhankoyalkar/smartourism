# Development Environment Configuration
# Copy this to .env for local development

# Server Configuration
NODE_ENV=development
PORT=5000
HOST=localhost

# Database Configuration (PostgreSQL with PostGIS)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=smart_tourism
DB_USER=postgres
DB_PASS=
DB_SSL=false

# JWT Configuration
JWT_SECRET=development_secret_key_not_for_production

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Body Parser Configuration
BODY_LIMIT=10mb

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# AI/ML Risk Scoring Service (optional)
RISK_API_URL=http://localhost:8000

# SMS Service Configuration (optional)
SMS_API_KEY=test_key
SMS_API_URL=https://api.smsservice.com

# Email Service Configuration (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=test@gmail.com
EMAIL_PASS=test_password

# Blockchain Configuration (optional)
BLOCKCHAIN_RPC_URL=http://localhost:8545
PRIVATE_KEY=test_private_key

# Logging Configuration
LOG_LEVEL=debug

# Security Configuration
SESSION_SECRET=development_session_secret

# Rate Limiting (more lenient for development)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
