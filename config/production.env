# Production Environment Configuration
# Copy this to .env for production deployment

# Server Configuration
NODE_ENV=production
PORT=5000
HOST=0.0.0.0

# Database Configuration (PostgreSQL with PostGIS)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=smart_tourism
DB_USER=postgres
DB_PASS=your_secure_password_here
DB_SSL=false

# Alternative: Use DATABASE_URL for cloud deployments
# DATABASE_URL=postgresql://username:password@host:port/database

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_change_this_in_production_minimum_32_characters

# CORS Configuration (comma-separated for multiple origins)
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# Body Parser Configuration
BODY_LIMIT=10mb

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# AI/ML Risk Scoring Service (optional)
RISK_API_URL=http://localhost:8000

# SMS Service Configuration (optional)
SMS_API_KEY=your_sms_api_key
SMS_API_URL=https://api.smsservice.com

# Email Service Configuration (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Blockchain Configuration (optional)
BLOCKCHAIN_RPC_URL=https://mainnet.infura.io/v3/your_project_id
PRIVATE_KEY=your_private_key_for_blockchain_operations

# Logging Configuration
LOG_LEVEL=info

# Security Configuration
SESSION_SECRET=your_session_secret_key_for_production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
